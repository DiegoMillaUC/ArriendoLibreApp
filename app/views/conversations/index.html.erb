
<h1>Chat</h1>
<br/>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Usuario</th>
      <th>Email</th>
      <th>Rol</th>
      <th>Chat</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
        <tr>
            <% if usuario.id != current_usuario.id %>
                <td><%= usuario.nombre %> </td>
                <td><%= usuario.email %> </td>
                <td><%= usuario.role %> </td>
                <td><%= link_to 'Chatear',
                conversations_path(sender_id: current_usuario.id, recipient_id: usuario.id),
                 method: "post", class:"btn btn-dark"%> </td>
            <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

