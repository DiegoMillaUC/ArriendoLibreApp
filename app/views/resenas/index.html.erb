<p id="notice"><%= notice %></p>

<h1>Resenas</h1>
<br/>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Producto</th>
      <th>Calificacion</th>
      <th>Ver detalle</th>
    </tr>
  </thead>

  <tbody>
    <% if current_usuario.role == "moderador" %>
      <% Resena.all.each do |resena| %>
        <tr>
          <td><%= resena.producto.nombre %></td>
          <td><%= resena.calificacion %></td>
          <td><%= link_to 'Show', usuario_resena_path(resena.usuario_id, resena) , class:"btn btn-dark"%></td>
        </tr>
      <% end %>
    <% else %>
      <% @resenas.each do |resena| %>
        <tr>
          <td><%= resena.producto.nombre %></td>
          <td><%= resena.calificacion %></td>
          <td><%= link_to 'Show', usuario_resena_path(current_usuario, resena) , class:"btn btn-dark"%></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>