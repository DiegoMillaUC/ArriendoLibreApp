<%= form_with(model: producto, local: true) do |form| %>
  <% if producto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
        <% producto.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class:"form-control"  %>
  </div>

  <div class="field form-group">
    <%= form.label :imagen %>
    <%= form.file_field :imagen, class:"form-control" %>

    <% if producto.imagen.attached? %>
      <%= image_tag producto.imagen, style: "width: 200px; display: block" %>
    <% end %>

  </div>

  <div class="field form-group">
    <%= form.label :categoria %>
    <%= form.label_field :categoria, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :precio %>
    <%= form.number_field :precio, class:"form-control"  %>
  </div>

  <div class="field form-group">
    <%= form.label :descripcion %>
    <%= form.text_field :descripcion, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :stock_actual %>
    <%= form.number_field :stock_actual, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :stock_total %>
    <%= form.number_field :stock_total, class:"form-control" %>
  </div>

<br/>
  <div class="actions">
    <%= form.submit class:"btn btn-dark"%>
  </div>
<% end %>
